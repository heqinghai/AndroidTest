<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/normal_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.activitytest.NormalActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/normal_layout_button_1"
        android:text="禁用Button控件的字母默认大写"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_below="@+id/normal_layout_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/normal_editText1"
        android:hint="在此可输入文本"
        android:maxLines="5"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/normal_imageView1"
        android:layout_below="@+id/normal_editText1"
        android:src="@drawable/img1"
        />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/normal_prosBar1"
        android:layout_below="@+id/normal_imageView1"
        android:visibility="visible"
        /><!--style="?android:attr/progressBarStyleHorizontal"-->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/normal_button2"
        android:text="normal_button2"
        android:textAllCaps="false"
        android:layout_below="@+id/normal_prosBar1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/normal_button3"
        android:textAllCaps="false"
        android:text="normal_button3"
        android:layout_below="@+id/normal_button2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/normal_textView1"
        android:gravity="center"
        android:textColor="#FF0000"
        android:textSize="30sp"
        android:text="This is a Normal activity, 这是TextView控件属性测试：位置，颜色，字体大小"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
